        <item name="android:textColor">#ce000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActionbarTitleFont.Dark" parent="ActionbarTitleFont.Light">
        <item name="android:textColor">#ceffffff</item>
    </style>

