<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 
    Draws a border at the left side of the layout. This separates 
    the channel and program list fragments from each other. 
    -->
    <item
        android:bottom="-2dp"
        android:left="0dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"
                android:color="#FFDDDDDD" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>