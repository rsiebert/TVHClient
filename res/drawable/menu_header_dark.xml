<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 
    Draws a border at the bottom for the layout that shows the 
    programs for a single channel. This separates the list of 
    channels and programs with a horizontal line from each other. 
    -->
    <item
        android:bottom="0dp"
        android:left="-3dp"
        android:right="-3dp"
        android:top="-3dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="2dp"
                android:color="#FF666666" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

</layer-list>