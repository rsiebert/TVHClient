<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Font for the program/channel/recording title texts in the details screens -->
    <style name="TitleFont.Light" parent="@android:style/TextAppearance.Large">
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TitleFont.Dark" parent="TitleFont.Light">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Font for the header texts in the details screens -->
    <style name="HeaderFont.Light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#AAAAAA</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HeaderFont.Dark" parent="HeaderFont.Light">
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <!-- Styles that will be used for the dark holo theme -->
    <style name="CustomTheme" parent="android:Theme.Holo">
        <item name="ic_menu_search">@drawable/ic_menu_search_dark</item>
        <item name="ic_menu_save">@drawable/ic_menu_save_dark</item>
        <item name="ic_menu_cancel">@drawable/ic_menu_cancel_dark</item>
        <item name="ic_menu_add">@drawable/ic_menu_new_dark</item>
        <item name="ic_menu_tags">@drawable/ic_menu_tags_dark</item>
        <item name="ic_menu_refresh">@drawable/ic_menu_refresh_dark</item>
        <item name="ic_menu_settings">@drawable/ic_menu_settings_dark</item>
        <item name="ic_menu_selected">@drawable/item_selected_dark</item>
        <item name="ic_menu_not_selected">@drawable/item_not_selected_dark</item>
        <item name="TitleFont">@style/TitleFont.Dark</item>
        <item name="HeaderFont">@style/HeaderFont.Dark</item>
    </style>

    <!-- Styles that will be used for the light holo theme -->
    <style name="CustomTheme.Light" parent="android:Theme.Holo.Light">
        <item name="ic_menu_search">@drawable/ic_menu_search_light</item>
        <item name="ic_menu_save">@drawable/ic_menu_save_light</item>
        <item name="ic_menu_cancel">@drawable/ic_menu_cancel_light</item>
        <item name="ic_menu_add">@drawable/ic_menu_new_light</item>
        <item name="ic_menu_tags">@drawable/ic_menu_tags_light</item>
        <item name="ic_menu_refresh">@drawable/ic_menu_refresh_light</item>
        <item name="ic_menu_settings">@drawable/ic_menu_settings_light</item>
        <item name="ic_menu_selected">@drawable/item_selected_light</item>
        <item name="ic_menu_not_selected">@drawable/item_not_selected_light</item>
        <item name="TitleFont">@style/TitleFont.Light</item>
        <item name="HeaderFont">@style/HeaderFont.Light</item>
    </style>

</resources>